#! /bin/bash
#
#    A tail of two Plummers:   collision or collapse?
#
#    See e.g.:
#              van Albaba       https://ui.adsabs.harvard.edu/abs/1982MNRAS.201..939V/abstract
#              Villumsen        https://ui.adsabs.harvard.edu/abs/1982MNRAS.199..493V/abstract
#              McGlynn          https://ui.adsabs.harvard.edu/abs/1984ApJ...281...13M/abstract
#              Aguilar & White  https://ui.adsabs.harvard.edu/abs/1985ApJ...295..374A/abstract
#              Aguilar & White  https://ui.adsabs.harvard.edu/abs/1986ApJ...307...97A/abstract
#              Makino & Hut     https://ui.adsabs.harvard.edu/abs/1997ApJ...481...83M/abstract
#
# version: 25-apr-2021

set -x

#               Parameters for the script that can be overriden via the commandline
run=run0        # basename of the files belonging to this simulation
nbody=10000     # number of bodies in one plummer
tstop=100       # stop time of the integration
step=1          # dump time
seed=0          # random seed

dr=0            # separation along X
dy=0            # offset along Y (the impact parameter)
dv=0            # separation along X in velocity (approaching)
vs=1            # V scale for input models


#               Commandline Parser: simple keyword=value 
for arg in $*; do
  export $arg
done

# @todo check for existence
mkdir -p $run
cd $run


# seed=0 is allowed as well
mkplummer - $nbody seed="$seed"   | snapscale - p1 vscale=$vs
mkplummer - $nbody seed="2*$seed" | snapscale - p2 vscale=$vs

snapstack p1 p1 p3 deltar=$dr,$dy,0 deltav=-$dv,0,0 zerocm=t

gyrfalcON p3 p3.out tstop=$tstop step=$step eps=0.05 kmax=8 give=mxvp > p3.log

exit 0

snapmradii p3.out 
snapplot p3.out  xrange=-16:16 yrange=-2:2 xvar=x yvar=vx   color=etot crange=0:1
