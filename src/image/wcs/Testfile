DIR = src/image/wcs
BIN = wcs testpos
NEED = wcs

help:
	@echo $(DIR)

need:
	@echo $(NEED)

clean:
	@echo Cleaning $(DIR)
	@rm -f testpos.test

all:	$(BIN)


wcs: _testpos
	@echo Running $@
	wcs ref=30,30 refpix=128,128 inc=0.1,0.1 pix=10,10
	@echo 18.2 18.2 should be on the line before
	wcs ref=30,30 refpix=128,128 inc=0.1,0.1 pos=10,10
	@echo -72 -72 should be on the line before

_testpos:
	make testpos
	testpos > testpos.test 
	diff testpos.ref testpos.test


