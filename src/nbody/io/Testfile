DIR = src/nbody/io
BIN = snaptipsy tipsysnap stoa atos tabtos 
NEED = $(BIN) mkplummer snapprint snapcmp

help:
	@echo $(DIR)

need:
	@echo $(NEED)

clean:
	@echo Cleaning $(DIR)
	@rm -f stoa.out stoa.cmp atos.out st.out ts.out mp.out \
		tabtos.in tabtos.out tabtos.cmp

NBODY = 10

all:	$(BIN)

stoa:
	@echo Running stoa
	mkplummer - $(NBODY) | stoa - stoa.out

atos:
	@echo Running atos
	atos stoa.out atos.out
	stoa atos.out stoa.cmp
	@echo Running diff stoa.out stoa.cmp
	diff stoa.out stoa.cmp

T = dark

snaptipsy:
	@echo Running snaptipsy:
	mkplummer mp.out $(NBODY) ; snaptipsy mp.out st.out mode=$(T)

tipsysnap:
	@echo Running tipsysnap
	tipsysnap st.out ts.out mode=binary options=$(T)
	@echo Running snapcmp
	tsf ts.out; tsf mp.out
	snapcmp ts.out mp.out

tabtos:
	@echo Running tabtos
	mkplummer - $(NBODY) | snapprint - m,x,y,z,vx,vy,vz > tabtos.in
	tabtos tabtos.in tabtos.out "" mass,pos,vel times=0
	snapprint tabtos.out m,x,y,z,vx,vy,vz > tabtos.cmp
	@echo Running diff tabtos.in tabtos.cmp
	diff tabtos.in tabtos.cmp
