DIR = src/nbody/core
BIN = bodytrans
NEED = $(BIN)

help:
	@echo $(DIR)

need:
	@echo $(NEED)

clean:
	@echo Cleaning $(DIR)

all:	$(BIN)

bodytrans:
	@echo Running $@
	bodytrans x; nemo.coverage bodytrans.c
	bodytrans y; nemo.coverage bodytrans.c
	bodytrans z; nemo.coverage bodytrans.c
	bodytrans r; nemo.coverage bodytrans.c

