DIR = src/nbody/core
BIN = bodytrans
NEED = $(BIN)

help:
	@echo $(DIR)

need:
	@echo $(NEED)

clean:
	@echo Cleaning $(DIR)

all:	$(BIN)

bodytrans:
	@echo Running $@
	bodytrans x; nemo.coverage bodytrans.c
	bodytrans y; bodytrans z; bodytrans r; 
	bodytrans 'sqrt(x*x+y*y)>0' int
	bodytrans 'sqrt(x*x+y*y)>1' int
	bodytrans 'sqrt(x*x+y*y)>2' int

