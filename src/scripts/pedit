#! /usr/bin/env python
#
#   parameter editor for "keyword    value"
#                     or "keyword=value"
#   parameter files
#
#   Usage:   pedit pfile [options] a=1 f="'a.fits'"
#
#   Options:
#            -e      bash style keyword=value
#
#
#   @todo   error checking
#           implement some options:
#             -g : grep like function
#             -c : pick comment character?
#             -m : mode (e.g. using '=' between key and val)
#           implement an option (-g ?) to match on something, then replace the
#              first value. Example taken from Tracy, where he had files like
#              "1.234  =  RC  = some text about this"

version = "17-feb-2021"

import sys

if len(sys.argv) < 2:
    print("Usage: %s parfile [options] a=1 f=\"'a.fits'\" [> parfile.new]" % sys.argv[0])
    print("Version: %s" % version)
    print("Options:    -e     use bash style key=val");
    print("            -o     overwrite input parfile");
    sys.exit(1)


filename = sys.argv[1]
eqmode   = False
owmode   = False

kv = {}

for keyval in sys.argv[2:]:
    if keyval=='-e':
        eqmode = True
        continue
    if keyval=='-o':
        owmode = True
        continue
    
    ieq = keyval.find('=')
    key = keyval[:ieq]
    val = keyval[ieq+1:]
    kv[key] = val

fp = open(filename)
lines = fp.readlines()
fp.close()

if owmode:
    print("Overwriting %s" % filename)
    fp = open(filename,"w")


for line in lines:
    line = line.strip()
    w = line.split()
    if len(w) > 1:
        if w[0] in kv:
            if eqmode:
                oline = "%s = %s" % (w[0],kv[w[0]])
            else:
                oline = "%s   %s" % (w[0],kv[w[0]])
        else:
            oline = line
    else:
        if eqmode:
            w=line.split('=')
            if len(w)==2:
                if w[0] in kv:
                    oline = "%s=%s" % (w[0],kv[w[0]])
                else:
                    oline = line
            else:
                oline = line
        else:
            oline = line
    if owmode:
        fp.write("%s\n" % oline)
    else:
        print(oline)
        

if owmode:
    fp.close()
