#
NEMO=nemo_4.2

#
echo Starting with a clean astro$NEMO
rm -rf astro$NEMO
mkdir astro$NEMO
cd astro$NEMO

#
mkdir opt
git clone https://github.com/teuben/nemo opt/$NEMO
cp -a opt/$NEMO/src/scripts/DEBIAN .
#
cd opt/$NEMO
echo configure ...
./configure --with-yapp=pgplot   > install.config.log  2>&1
echo build ... 
make build                       > install.build.log   2>&1

#
cd ../../..
dpkg-deb --build astro$NEMO
# fakeroot dpkg-deb --build $NEMO
#
#

echo Now issue: sudo dpkg --install astro$NEMO.deb

# lsb_release -i
# lsb_release -r
# uname -p        ->  x86_64
# amd64
