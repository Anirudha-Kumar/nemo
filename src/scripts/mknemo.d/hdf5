#! /bin/bash
#
#  Install HDF5 within NEMO
#
#
#  25-dec-2019  drafted
#

# if ($?NEMO == 0) set NEMO=`pwd`

version=1.10.6



if [ -f $NEMO/tar/hdf5-$version.tar.gz ]; then
   ln -s $NEMO/tar/hdf5-$version.tar.gz
fi   
if [ ! -f hdf5-$version.tar.gz ]; then
   wget  http://www.fftw.org/hdf5-$version.tar.gz
fi


cd $NEMO/local
wget https://support.hdfgroup.org/ftp/HDF5/releases/hdf5-1.10/hdf5-1.10.6/src/hdf5-$version.tar.gz
tar zxf hdf5-$version.tar.gz
cd hdf5-$version

./configure --prefix=$NEMO/opt
make -j
make install 
