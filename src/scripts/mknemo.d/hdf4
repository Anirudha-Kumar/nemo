#! /bin/bash
#
#  Install HDF5 within NEMO
#
#
#  25-dec-2019  drafted
#

# if ($?NEMO == 0) set NEMO=`pwd`

version=4.2.14
wget=wgetc

for arg in $*; do
  export $arg
done

cd $NEMO/local
$wget https://support.hdfgroup.org/ftp/HDF/releases/HDF$version/src/hdf-$version.tar.gz

tar zxf hdf-$version.tar.gz
cd hdf-$version

./configure --prefix=$NEMO/opt
make -j
make install 
